{% extends 'base.html.twig' %}

{% block title %}Serveur détails{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {% block bandeau %}
        {{ parent() }}
    {% endblock %}
    <div class="container-fluid div3">
        <div class="div4">

            <h1>Détails du serveur : </h1>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Prestataire</th>
                        <td>{{ server.provider }}</td>
                    </tr>
                    <tr>
                        <th>Offre</th>
                        <td>{{ server.offer }}</td>
                    </tr>
                    <tr>
                        <th>Prix</th>
                        <td>{{ server.price }}</td>
                    </tr>
                    <tr>
                        <th>Prix payé</th>
                        <td>{{ server.invoicedPrice }}</td>
                    </tr>
                    <tr>
                        <th>Type de renouvellement</th>
                        <td>{{ server.renewalType }}</td>
                    </tr>
                    <tr>
                        <th>Date de renouvellement</th>
                        <td>{{ server.renawalDate ? server.renawalDate|date('Y-m-d') : '' }}</td>
                    </tr>
                </tbody>
            </table>

            <a href="{{ path('server_index') }}" class="btn btn-warning">< Retour</a>

            <a href="{{ path('server_edit', {'id': server.id}) }}" class="btn btn-success">Éditer</a>
            <br><br>
            {{ include('server/_delete_form.html.twig') }}
        </div>
    </div>
    {% block footer %}
        {{ parent() }}
    {% endblock %}

{% endblock %}
