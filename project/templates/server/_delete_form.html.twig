<form method="post" action="{{ path('server_delete', {'id': currentServer.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce serveur ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ currentServer.id) }}">
    <button class="btn btn-danger" style="margin-bottom: 10px">Supprimer : {{ currentServer.name }}</button>
</form>
