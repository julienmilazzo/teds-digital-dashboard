{% extends 'base.html.twig' %}

{% set orderedType = app.request.get('orderedType') %}

{% block title %}Site liste{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        function searchSite() {
            var url = '{{ path("site_search") }}';
            window.location.href = url + '?searchName=' + $('#search').val();
        }
    </script>
{% endblock %}

{% block body %}

    {% block bandeau %}
        {{ parent() }}
    {% endblock %}
    <div class="container-fluid div3">
        <div class="div4">

            <h1 style="display: inline-block">Liste des sites : </h1>
            <div style="float: right">
                <input id="search" class="form-control mr-sm-2 search-bar" type="search" placeholder="Rechercher" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" onclick="searchSite()" >Rechercher</button>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th><a class="a-ordered" href="{{ path('site_ordered', {'orderedType' : 'name', 'orderBy' : sort(orderedType, 'name', orderBy ?? null) }) }}">Nom <i class="fa fa-arrow-{{ (direction(orderedType, 'name', orderBy ?? null))}}"></i></a></th>
                        <th><a class="a-ordered" href="{{ path('site_ordered', {'orderedType' : 'onlineDate', 'orderBy' : sort(orderedType, 'onlineDate', orderBy ?? null) }) }}">Date de mis en ligne <i class="fa fa-arrow-{{ (direction(orderedType, 'onlineDate', orderBy ?? null))}}"></i></a></th>
                        <th><a class="a-ordered" href="{{ path('site_ordered', {'orderedType' : 'online', 'orderBy' : sort(orderedType, 'online', orderBy ?? null) }) }}">En ligne <i class="fa fa-arrow-{{ (direction(orderedType, 'online', orderBy ?? null))}}"></i></a></th>
                        <th><a class="a-ordered" href="{{ path('site_ordered', {'orderedType' : 'enable', 'orderBy' : sort(orderedType, 'enable', orderBy ?? null) }) }}">Actif <i class="fa fa-arrow-{{ (direction(orderedType, 'enable', orderBy ?? null))}}"></i></a></th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for site in sites %}
                    <tr style="vertical-align: middle;">
                        <td>{{ site.name }}</td>
                        <td>{{ site.onlineDate ? site.onlineDate|date('d-m-Y') : '' }}</td>
                        <td>{{ site.online ? 'Oui' : 'Non' }}</td>
                        <td>{{ site.enable ? 'Oui' : 'Non' }}</td>
                        <td>
                            <a href="{{ path('site_show', {'id': site.id}) }}" class="btn btn-secondary">Détails</a>
                            <a href="{{ path('site_edit', {'id': site.id}) }}" class="btn btn-success">Éditer</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucun site trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('site_new') }}" class="btn btn-primary">Ajouter</a>
        </div>
    </div>
    {% block footer %}
        {{ parent() }}
    {% endblock %}
{% endblock %}
