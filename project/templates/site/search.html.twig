{% extends 'base.html.twig' %}

{% block title %}Site liste{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}

    {% block bandeau %}
        {{ parent() }}
    {% endblock %}
    <div class="yellow row div-title">
        <div class="col-sm">
            <h1 class="title-index bd-bt" style="display: inline-block">Résultats de votre recherche :</h1>
        </div>
    </div>
    <div class="container-fluid div3 grid">
        <div class="div-annexe div4">
            <table class="table">
                <thead>
                <tr>
                    <th>Nom du site</th>
                    <th>Date de mis en ligne</th>
                    <th>En ligne</th>
                    <th>Actif</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for site in sites %}
                    <tr style="vertical-align: middle;">
                        <td>{{ site.name }}</td>
                        <td>{{ site.onlineDate ? site.onlineDate|date('d-m-Y') : '' }}</td>
                        <td>{{ site.online ? 'Oui' : 'Non' }}</td>
                        <td>{{ site.enable ? 'Oui' : 'Non' }}</td>
                        <td>
                            <a href="{{ path('site_show', {'id': site.id}) }}" class="btn btn-secondary">Détails</a>
                            <a href="{{ path('site_edit', {'id': site.id}) }}" class="btn blue">Éditer</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucun site trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('site_index') }}" class="btn yellow">< Retour liste</a>
        </div>
    </div>
    {% block footer %}
        {{ parent() }}
    {% endblock %}
{% endblock %}
