{% extends 'base.html.twig' %}

{% set orderedType = app.request.get('orderedType') %}

{% block title %}Nom de domaine liste{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        function searchSite() {
            var url = '{{ path("domain_name_search") }}';
            window.location.href = url + '?searchUrl=' + $('#search').val();
        }
    </script>
{% endblock %}

{% block body %}
    {% block bandeau %}
        {{ parent() }}
    {% endblock %}
    <div class="container-fluid div3">
        <div class="div4">
            <h1 style="display: inline-block">Liste nom de domaine : </h1>
            <div style="float: right">
                <input id="search" class="form-control mr-sm-2 search-bar" type="search" placeholder="Rechercher" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" onclick="searchSite()" >Rechercher</button>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th><a class="a-ordered" href="{{ path('domain_name_ordered', {'orderedType' : 'url', 'orderBy' : sort(orderedType, 'url', orderBy ?? null) }) }}">Url <i class="fa fa-arrow-{{ (direction(orderedType, 'url', orderBy ?? null))}}"></i></a></th>
                        <th><a class="a-ordered" href="{{ path('domain_name_ordered', {'orderedType' : 'provider', 'orderBy' : sort(orderedType, 'provider', orderBy ?? null) }) }}">Prestataire <i class="fa fa-arrow-{{ (direction(orderedType, 'provider', orderBy ?? null))}}"></i></a></th>
                        <th><a class="a-ordered" href="{{ path('domain_name_ordered', {'orderedType' : 'offer', 'orderBy' : sort(orderedType, 'offer', orderBy ?? null) }) }}">Offre <i class="fa fa-arrow-{{ (direction(orderedType, 'offer', orderBy ?? null))}}"></i></a></th>
                        <th><a class="a-ordered" href="{{ path('domain_name_ordered', {'orderedType' : 'price', 'orderBy' : sort(orderedType, 'price', orderBy ?? null) }) }}">Prix (€) <i class="fa fa-arrow-{{ (direction(orderedType, 'price', orderBy ?? null))}}"></i></a></th>
                        <th><a class="a-ordered" href="{{ path('domain_name_ordered', {'orderedType' : 'invoicedPrice', 'orderBy' : sort(orderedType, 'invoicedPrice', orderBy ?? null) }) }}">Prix payé (€) <i class="fa fa-arrow-{{ (direction(orderedType, 'invoicedPrice', orderBy ?? null))}}"></i></a></th>
                        <th><a class="a-ordered" href="{{ path('domain_name_ordered', {'orderedType' : 'renewalType', 'orderBy' : sort(orderedType, 'renewalType', orderBy ?? null) }) }}">Type de renouvellement <i class="fa fa-arrow-{{ (direction(orderedType, 'renewalType', orderBy ?? null))}}"></i></a></th>
                        <th><a class="a-ordered" href="{{ path('domain_name_ordered', {'orderedType' : 'renewalDate', 'orderBy' : sort(orderedType, 'renewalDate', orderBy ?? null) }) }}">Date de renouvellement <i class="fa fa-arrow-{{ (direction(orderedType, 'renewalDate', orderBy ?? null))}}"></i></a></th>
                        <th><a class="a-ordered" href="{{ path('domain_name_ordered', {'orderedType' : 'site', 'orderBy' : sort(orderedType, 'site', orderBy ?? null) }) }}">Site <i class="fa fa-arrow-{{ (direction(orderedType, 'site', orderBy ?? null))}}"></i></a></th>
                        <th><a class="a-ordered" href="{{ path('domain_name_ordered', {'orderedType' : 'enable', 'orderBy' : sort(orderedType, 'enable', orderBy ?? null) }) }}">Actif <i class="fa fa-arrow-{{ (direction(orderedType, 'enable', orderBy ?? null))}}"></i></a></th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for domain_name in domain_names %}
                    <tr style="vertical-align: middle;">
                        <td>{{ domain_name.url }}</td>
                        <td>{{ domain_name.provider }}</td>
                        <td>{{ domain_name.offer }}</td>
                        <td>{{ domain_name.price }}</td>
                        <td>{{ domain_name.invoicedPrice }}</td>
                        <td>{{ domain_name.renewalType }}</td>
                        <td>{{ domain_name.renewalDate ? domain_name.renewalDate|date('Y-m-d') : '' }}</td>
                        <td>{{ domain_name.site.name }}</td>
                        <td>{{ domain_name.enable ? 'Oui' : 'Non' }}</td>
                        <td>
                            <a href="{{ path('domain_name_show', {'id': domain_name.id}) }}" class="btn btn-secondary" style="margin-bottom: 5px">Détails</a>
                            <a href="{{ path('domain_name_edit', {'id': domain_name.id}) }}" class="btn btn-success">Éditer</a>
                        </td>

                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9">Aucun Nom de domaine</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('domain_name_new') }}" class="btn btn-primary">Ajouter</a>
        </div>
    </div>
    {% block footer %}
        {{ parent() }}
    {% endblock %}
{% endblock %}
