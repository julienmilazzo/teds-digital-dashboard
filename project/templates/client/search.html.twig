{% extends 'base.html.twig' %}

{% block title %}Site liste{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}

    {% block bandeau %}
        {{ parent() }}
    {% endblock %}
    <div class="container-fluid div3">
        <div class="div4">

            <h1>Résultats de votre recherche : </h1>
            <table class="table">
                <thead>
                <tr>
                    <th><a class="a-ordered" href="{{ path('client_ordered', {'orderedType' : 'name'}) }}">Nom</a></th>
                    <th><a class="a-ordered" href="{{ path('client_ordered', {'orderedType' : 'email'}) }}">Email</a></th>
                    <th><a class="a-ordered" href="{{ path('client_ordered', {'orderedType' : 'address'}) }}">Adresse</a></th>
                    <th><a class="a-ordered" href="{{ path('client_ordered', {'orderedType' : 'city'}) }}">Ville</a></th>
                    <th><a class="a-ordered" href="{{ path('client_ordered', {'orderedType' : 'zipCode'}) }}">Code postal</a></th>
                    <th><a class="a-ordered" href="{{ path('client_ordered', {'orderedType' : 'phone'}) }}">Téléphone</a></th>
                    <th><a class="a-ordered" href="{{ path('client_ordered', {'orderedType' : 'enable'}) }}">Actif</a></th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for client in clients %}
                    <tr style="vertical-align: middle;">
                        <td>{{ client.name }}</td>
                        <td>{{ client.email }}</td>
                        <td>{{ client.address }}</td>
                        <td>{{ client.city }}</td>
                        <td>{{ client.zipCode }}</td>
                        <td>{{ client.phone }}</td>
                        <td>{{ client.enable ? 'Oui' : 'Non' }}</td>
                        <td style="width: 17%">
                            <a href="{{ path('client_show', {'id': client.id}) }}" class="btn btn-secondary">Détails</a>
                            <a href="{{ path('client_edit', {'id': client.id}) }}" class="btn btn-success">Éditer</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">Aucun client</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('client_index') }}" class="btn btn-warning">< Retour liste</a>
        </div>
    </div>
    {% block footer %}
        {{ parent() }}
    {% endblock %}
{% endblock %}
