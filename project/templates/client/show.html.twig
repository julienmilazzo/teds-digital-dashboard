{% extends 'base.html.twig' %}

{% block title %}Client détails{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {% block bandeau %}
        {{ parent() }}
    {% endblock %}

    <div class="container-fluid div3">
        <div class="div4">
            <h1>Détails du client : {{ client.name }}</h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Email</th>
                    <td>{{ client.email }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ client.address }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ client.city }}</td>
                </tr>
                <tr>
                    <th>Code postal</th>
                    <td>{{ client.zipCode }}</td>
                </tr>
                <tr>
                    <th>téléphone</th>
                    <td>{{ client.phone }}</td>
                </tr>
                <tr>
                    <th>Actif</th>
                    <td>{{ client.enable ? 'Oui' : 'Non' }}</td>
                </tr>
                <tr>
                    <th>Sites</th>
                    <td>
                        {% for site in client.sites %}
                            - {{ site.name }}
                            <a href="{{ path('site_show', {'id': site.id}) }}" class="a-link btn icon-title-left" data-toggle="tooltip" title="Cliquez pour plus de détails"><i class="fa fa-external-link" aria-hidden="true"></i></a>
                            <a class="a-link btn" href="{{ path('client_remove_site', {'id' : client.id, 'siteId' : site.id}) }}" onclick="return confirm('Souhaitez-vous vraiment supprimer le site : ' + '{{ site.name }}')"><i class="fa fa-trash" aria-hidden="true"></i></a><br>
                        {% endfor %}
                    </td>
                </tr>
                </tbody>
            </table>

            <a href="{{ path('client_index') }}" class="btn btn-warning">< Retour</a>

            <a href="{{ path('client_edit', {'id': client.id}) }}" class="btn btn-success">Éditer</a>
            <br><br>
            {{ include('client/_delete_form.html.twig') }}
        </div>
    </div>

    {% block footer %}
        {{ parent() }}
    {% endblock %}
{% endblock %}
