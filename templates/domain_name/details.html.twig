<h2 class="c-parme bd-bt">Détails des noms de domaines</h2>

<table class="table table-striped table-hover" id="domain_names_table">
    <thead>
        <tr class="table-dark">
            {% include 'helpers/table-head/client.html.twig' %}
            {% include 'helpers/table-head/prestataire.html.twig' %}
            {% include 'helpers/table-head/offre.html.twig' %}
            {% include 'helpers/table-head/cost.html.twig' %}
            {% include 'helpers/table-head/price.html.twig' %}
            {% include 'helpers/table-head/renew.html.twig' %}
            {% include 'helpers/table-head/start.html.twig' %}
            {% include 'helpers/table-head/date-renew.html.twig' %}
            {% include 'helpers/table-head/servers.html.twig' %}
            <th>Site</th>
            {% include 'helpers/table-head/actif.html.twig' %}
            {% include 'helpers/table-head/empty-non-sortable.html.twig' %}
        </tr>
    </thead>
    <tbody>
        {% for currentDomainName in domainNames %}
            <tr class="align-middle">
                {% set currentSite = currentDomainName.site %}
                {% include 'helpers/table-body/client.html.twig' %}
                <td>{{ currentDomainName.provider }}</td>
                <td>{{ currentDomainName.offer }}</td>
                <td>{{ currentDomainName.cost }}</td>
                <td>{{ currentDomainName.invoicedPrice }}</td>
                <td>{{ currentDomainName.renewalType }}</td>
                {% include 'helpers/table-body/date.html.twig' with {'date': currentDomainName.startDate} only %}
                {% include 'helpers/table-body/date.html.twig' with {'date': currentDomainName.renewalDate} only %}
                {% include 'helpers/table-body/servers.html.twig' %}
                <td>
                    {% if currentDomainName.site is defined and currentDomainName.site is not null %}
                        - {{ currentDomainName.site.name }}
                    {% else %}
                        Aucun
                    {% endif %}
                </td>
                {% include 'helpers/table-body/oui-non.html.twig' with {'boolean': currentDomainName.enable} only %}
                <td class="text-center">
                    <a href="{{ path('domain_name_edit', {'id': currentDomainName.id}) }}" class="btn blue">
                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                    </a>
                    {% if date(currentDomainName.renewalDate) < date('+1month') %}
                        <button onclick="updateAddRenewalDate('{{ path('updateAddRenewalDate', {id: currentDomainName.id}) }}')" class="btn parme">
                            Facturé
                        </button>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
