{% extends 'base.html.twig' %}

{% block title %}SocialNetwork liste{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {% block bandeau %}
        {{ parent() }}
    {% endblock %}
    <div class="yellow row div-title">
        <div class="col-sm">
            <h1 class="title-index bd-bt">Réseaux sociaux</h1>
        </div>
    </div>

    <div class="container-fluid pt-4">
        <div class="row ps-5">
            <div class="col-11 offset-1 pt-3 ps-5">
                <a href="{{ path('social_network_new') }}" class="btn parme float-end">Ajouter un réseau social</a>
                {% if socialNetworks|length %}
                    {% set currentClient = socialNetworks[0].client %}
                    {% include 'social_network/details.html.twig' %}
                {% else %}
                    <p>Aucun réseau social</p>
                {% endif %}
            </div>
        </div>
    </div>
    {% block footer %}
        {{ parent() }}
    {% endblock %}
{% endblock %}
