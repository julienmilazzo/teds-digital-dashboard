<h2 class="c-parme bd-bt">DÃ©tails des clicks & collects</h2>

<table class="table table-striped table-hover" id="cc_table">
    <thead>
        <tr class="table-dark">
            {% include 'helpers/table-head/client.html.twig' %}
            {% include 'helpers/table-head/prestataire.html.twig' %}
            {% include 'helpers/table-head/offre.html.twig' %}
            {% include 'helpers/table-head/cost.html.twig' %}
            {% include 'helpers/table-head/price.html.twig' %}
            {% include 'helpers/table-head/renew.html.twig' %}
            <th data-filter="false">Mise en ligne</th>
            {% include 'helpers/table-head/start.html.twig' %}
            {% include 'helpers/table-head/date-renew.html.twig' %}
            {% include 'helpers/table-head/actif.html.twig' %}
            <th>Site</th>
            {% include 'helpers/table-head/commentary.html.twig' %}
            {% include 'helpers/table-head/servers.html.twig' %}
            {% include 'helpers/table-head/empty-non-sortable.html.twig' %}
        </tr>
    </thead>
    <tbody>
        {% for currentClickAndCollect in clickAndCollects %}
            <tr class="align-middle">
                {% set client = currentClickAndCollect.client %}
                {% include 'helpers/table-body/client.html.twig' %}
                {% include 'helpers/table-body/provider.html.twig' with {'provider': currentClickAndCollect.provider} only %}
                {% include 'helpers/table-body/offer.html.twig' with {'offer': currentClickAndCollect.offer} only %}
                {% include 'helpers/table-body/price-ht.html.twig' with {'price': currentClickAndCollect.cost} only %}
                {% include 'helpers/table-body/price-ht.html.twig' with {'price': currentClickAndCollect.invoicedPrice} only %}
                {% include 'helpers/table-body/renewal-type.html.twig' with {'renewalType': currentClickAndCollect.renewalType } only %}
                {% include 'helpers/table-body/date.html.twig' with {'date': currentClickAndCollect.onlineDate} only %}
                {% include 'helpers/table-body/date.html.twig' with {'date': currentClickAndCollect.startDate} only %}
                {% include 'helpers/table-body/date.html.twig' with {'date': currentClickAndCollect.renewalDate, 'month': 'true'} only %}
                {% include 'helpers/table-body/oui-non.html.twig' with {'boolean': currentClickAndCollect.online} only %}
                {% set currentSite = currentClickAndCollect.site %}
                <td>{{ currentSite.name }}</td>
                {% include 'helpers/table-body/commentary.html.twig' with {'commentary': currentClickAndCollect.commentary} only %}
                {% include 'helpers/table-body/servers.html.twig' %}
                <td>
                    <a href="{{ path('click_and_collect_edit', {'id': currentClickAndCollect.id}) }}" class="btn blue">
                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
