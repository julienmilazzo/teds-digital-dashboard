{% extends 'base.html.twig' %}

{% set sort = orderBy is not defined or orderBy is same as ('ASC') ? 'ASC' : 'DESC' %}

{% block title %}Client liste{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener("click", function () {
            var date = new Date();
            if (11 === date.getMonth()) {
                document.getElementById('noel').play();
            }
        });

        var searchItems = [];
        $(document).ready(() => {
            $("#search-form").on("submit", (e) => {
                e.preventDefault();
                searchClient();
            });
        });

        function searchClient() {
            if (1 === searchItems.length) {
                window.location.href = '/client/' + searchItems[0];
            } else {
                window.location.href = '{{ path("client_search") }}' + '?ids=' + searchItems.join();
            }
        }

        function searchSame() {
            searchItems = [];
            {% for client in clients %}
                var clientName = "{{ client.name }}"
                if (!clientName.toLowerCase().includes($('#search').val().toLowerCase())) {
                    $('#client-{{ client.id }}').addClass("d-none");
                } else {
                    $('#client-{{ client.id }}').removeClass("d-none");
                    searchItems.push({{ client.id }});
                }
            {% endfor %}
        }
    </script>
{% endblock %}

{% block body %}
    {% block bandeau %}
        {{ parent() }}
    {% endblock %}
    <audio controls id='noel' style="display: none"><source src='{{ app.request.getSchemeAndHttpHost() }}/audio/noel.mp3' type='audio/mpeg'> </audio>
    <div class="yellow row div-title">
        <div class="col-sm">
            <h1 class="title-index bd-bt">Clients</h1>
        </div>
        <div class="col-sm search-div">
            <form id="search-form" action="">
                <input id="search" class="form-control mr-sm-2 search-bar" type="search" placeholder="Rechercher" aria-label="Search" onkeyup="searchSame()">
                <button class="btn parme my-2 my-sm-0" style="margin-bottom: 0.5rem!important;">Rechercher</button>
            </form>
        </div>
    </div>

    <div class="container-fluid pt-4">
        <div class="row ps-5">
            <div class="col-11 offset-1 pt-3 ps-5">
                <a href="{{ path('client_new') }}" class="btn parme float-end">Ajouter</a>
                <h1 class="c-blue bd-bt">Liste des clients </h1>
                {% if currentClient is defined and currentClient is not null %}
                    <table class="table table-striped table-hover" id="client_table">
                        <thead>
                            <tr class="table-dark">
                                <th>Nom</th>
                                <th>Email</th>
                                <th>Téléphone</th>
                                <th class="text-center">Site</th>
                                <th class="text-center">Hébergement</th>
                                <th class="text-center">Nom de domaine</th>
                                <th class="text-center">Click'N Collect</th>
                                <th class="text-center">French Echoppe</th>
                                <th class="text-center">Mail</th>
                                <th class="text-center">Publicité</th>
                                <th class="text-center">Réseaux sociaux</th>
                                {% include 'helpers/table-head/actif.html.twig' %}
                                {% include 'helpers/table-head/empty-non-sortable.html.twig' %}
                            </tr>
                        </thead>
                        <tbody>
                        {% for client in clients %}
                            <tr class="align-middle">
                                <td>
                                    <a href="{{ path('client_show', {'id': client.id}) }}" class="text-body text-decoration-none">
                                        {{ client.name }}<i class="fa fa-search ms-2" aria-hidden="true"></i>
                                    </a>
                                </td>
                                <td>{{ client.email }}</td>
                                <td>{{ client.phone }}</td>
                                {% include 'helpers/table-body/has-one.html.twig' with
                                    {'hasOne': client.sites is defined and client.sites is not null and client.sites|length} only %}
                                {% include 'helpers/table-body/has-one.html.twig' with
                                    {'hasOne': client.servers is defined and client.servers is not null and client.servers|length} only %}
                                {% include 'helpers/table-body/has-one.html.twig' with {'hasOne': hasOneIn(client, domainNames)} only %}
                                {% include 'helpers/table-body/has-one.html.twig' with {'hasOne': hasOneIn(client, clickAndCollects)} only %}
                                {% include 'helpers/table-body/has-one.html.twig' with {'hasOne': hasOneIn(client, frenchEchoppes)} only %}
                                {% include 'helpers/table-body/has-one.html.twig' with {'hasOne': hasOneIn(client, mails)} only %}
                                {% include 'helpers/table-body/has-one.html.twig' with {'hasOne': hasOneIn(client, ads)} only %}
                                {% include 'helpers/table-body/has-one.html.twig' with {'hasOne': hasOneIn(client, socialNetworks)} only %}
                                {% include 'helpers/table-body/oui-non.html.twig' with {'boolean': client.enable} only %}
                                <td>
                                    <a href="{{ path('client_edit', {'id': currentClient.id}) }}" class="btn blue">
                                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <p>Aucun client</p>
                {% endif %}
            </div>
        </div>
    </div>
    {% block footer %}
        {{ parent() }}
    {% endblock %}
    <script>
        $(function() {
            $("#client_table").tablesorter();
        });
    </script>
{% endblock %}
