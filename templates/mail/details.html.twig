<table class="table table-striped table-hover" id="mail_table">
    <thead>
        <tr class="table-dark">
            {% include 'helpers/table-head/client.html.twig' %}
            {% include 'helpers/table-head/prestataire.html.twig' %}
            {% include 'helpers/table-head/offre.html.twig' %}
            {% include 'helpers/table-head/cost.html.twig' %}
            {% include 'helpers/table-head/price.html.twig' %}
            {% include 'helpers/table-head/renew.html.twig' %}
            {% include 'helpers/table-head/start.html.twig' %}
            {% include 'helpers/table-head/date-renew.html.twig' %}
            {% include 'helpers/table-head/actif.html.twig' %}
            {% include 'helpers/table-head/commentary.html.twig' %}
            {% include 'helpers/table-head/domains.html.twig' %}
            {% include 'helpers/table-head/empty-non-sortable.html.twig' %}
        </tr>
    </thead>
    <tbody>
        {% for currentMail in mails %}
            <tr class="align-middle">
                {% set client = currentMail.client %}
                {% set domainNames = [currentMail.domainName] %}
                {% include 'helpers/table-body/client.html.twig' %}
                {% include 'helpers/table-body/provider.html.twig' with {'provider': currentMail.provider} only %}
                {% include 'helpers/table-body/offer.html.twig' with {'offer': currentMail.offer} only %}
                {% include 'helpers/table-body/price-ht.html.twig' with {'price': currentMail.cost} only %}
                {% include 'helpers/table-body/price-ht.html.twig' with {'price': currentMail.invoicedPrice} only %}
                {% include 'helpers/table-body/renewal-type.html.twig' with {'renewalType': currentMail.renewalType } only %}
                {% include 'helpers/table-body/date.html.twig' with {'date': currentMail.startDate} only %}
                {% include 'helpers/table-body/date.html.twig' with {'date': currentMail.renewalDate} only %}
                {% include 'helpers/table-body/oui-non.html.twig' with {'boolean': currentMail.enable} only %}
                {% include 'helpers/table-body/commentary.html.twig' with {'commentary': currentMail.commentary} only %}
                {% include 'helpers/table-body/domains.html.twig' %}
                {% include 'helpers/table-body/edit-link.html.twig' with {'link': path('mail_edit', {'id': currentMail.id})} only %}
            </tr>
        {% endfor %}
    </tbody>
</table>
